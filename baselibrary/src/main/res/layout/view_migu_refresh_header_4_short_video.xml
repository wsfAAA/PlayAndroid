<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/pull_icon"
            android:layout_width="34.8dp"
            android:layout_height="22.8dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/v_center"
            android:src="@drawable/pull_start" />

        <ImageView
            android:id="@+id/refreshing_icon"
            android:layout_width="34.8dp"
            android:layout_height="22.8dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/v_center"
            android:background="@drawable/loading_list"
            android:visibility="gone" />

        <TextView
            android:id="@+id/state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/v_center"
            android:text="@string/pull_to_refresh"
            android:textColor="@color/color_606060"
            android:textSize="12sp" />


        <View
            android:id="@+id/v_center"
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_centerHorizontal="true"></View>
    </RelativeLayout>
</RelativeLayout>