<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cmcc.com.playandroid.mvp.view.KnowledgeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">

        <playandroid.cmcc.com.baselibrary.ui.StopAppBarRecyclerView
            android:id="@+id/m_left_recycler_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/m_right_recycler_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="5" />
    </LinearLayout>

    <playandroid.cmcc.com.baselibrary.ui.BaseLoadingView
        android:id="@+id/m_loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
